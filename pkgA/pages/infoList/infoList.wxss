/* pkgA/pages/infoList/infoList.wxss */
.nav-popup-header .back-btn {
  margin-left: 20rpx;
}

.nav-item {
  width: 100%;
  height: 88rpx;
  margin-left: 123rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.nav-icon {
  width: 61.63rpx;
  height: 61.63rpx;
  margin-right: 13rpx;
  display: block; 
}

.nav-number {
  width: auto;
  height: 61.63rpx;
  line-height: 61.63rpx;
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}

.friend-popup-content {
  padding-top: 35rpx;
}

.friend-item {
  width: 100%;
  height: 132rpx;
  padding: 24rpx 32rpx ;
  display: flex;
  justify-content: space-between;
}

.friend-avatar {
  width: 84rpx;
  height: 84rpx;
  margin-right: 24rpx;
  position: relative;
}

.mini-icon {
  /* 去掉固定宽度，改为最小宽度+自适应 */
  min-width: 32rpx; 
  height: 32rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 100%; /* 固定在右上角，数字多了自动向右拓展 */
  transform: translate(-50%);
  background: rgba(251, 38, 64, 1);
  /* Flex布局实现文字居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx; /* 左右加内边距，让数字多时有空间 */
}

.mini-icon text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(255, 255, 255, 1);
  /* 去掉text-align和vertical-align，由flex布局控制 */
}

.friend-info {
  width: 486rpx;
  height: 100%;
  margin-right: 32rpx;
}

.friend-name {
  width: auto;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgb(11, 2, 5);
  text-align: left;
  vertical-align: top;  
}

.friend-esc {
  width: 100%;
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(158, 158, 158, 1);
  text-align: left;
  vertical-align: top;
  white-space: nowrap; /* 文本不换行 */
  overflow: hidden; /* 隐藏超出容器的内容 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}

.info-time {
  width: 60rpx;
  height: 100%;
  padding-top: 44rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  text-align: left;
  vertical-align: top;
}