/* pkgA/pages/dynamicDetail/dynamicDetail.wxss */
.banner-swiper {
  --td-swiper-radius: 0%;
  --td-swiper-nav-dot-size: 8rpx;
  --td-swiper-nav-dots-bar-active-width: 8rpx;
}
.t-swiper-nav__dots-item.t-swiper-nav__dots-item--horizontal {
  margin-left: 4rpx;
  margin-right: 4rpx;
}
.t-swiper-nav.t-swiper-nav--horizontal.t-swiper-nav__dots.t-swiper-nav--bottom {
  bottom: 48rpx;
}
.detail-content {
  width: 750rpx;
  height: 594rpx;
  background-color: #fff;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.detail-title {
  display: flex;
  align-items: flex-start;
  width: 100%;
  min-height: 86rpx; 
  padding-top: 42rpx;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 36rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
  white-space: normal;
}
.detail-userinfo {
  display: flex;
  margin-top: 32rpx;
}
.avatar {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  overflow: hidden;
}