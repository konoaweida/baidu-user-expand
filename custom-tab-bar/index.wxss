  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 24rpx 32rpx;
  margin-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  width: 80rpx;
  height: 80rpx;
}

/* 图标样式 */
.tab-bar-icon {
  transition: all 0.2s; /* 切换动画 */
}

/* 选中状态样式 */
.tab-bar-item.active .tab-bar-icon {
  transform: scale(1.1);
}