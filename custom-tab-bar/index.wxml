<!-- 移除wx:if，用样式控制显示/隐藏 -->
<view class="tab-bar-container {{isShow ? 'show' : 'hide'}}">
  <view class="tab-bar">
    <view 
      class="tab-bar-item {{active === index ? 'active' : ''}}" 
      wx:for="{{list}}" 
      wx:key="pagePath" 
      bindtap="switchTab" 
      data-path="{{item.pagePath}}"
      data-index="{{index}}"
    >
      <image 
        class="tab-bar-icon" 
        src="{{active === index ? item.selectedIcon : item.icon}}" 
        mode="aspectFit" 
        style="width: 100%; height: 100%;"
      ></image>
    </view>
  </view>
</view>