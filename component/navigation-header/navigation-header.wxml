<!-- 顶部占位：新增 wx:if 控制，默认显示（showPlaceholder 默认为 true） -->
<view 
  class="top-placeholder" 
  wx:if="{{showPlaceholder}}"
  style="height: {{menuTop + menuHeight + 12}}rpx;"
></view>

<!-- 固定头部容器：总高度与占位高度一致 -->
<view class="navigation" style="top: 0; height: {{menuTop + menuHeight + 12}}rpx;">
  <!-- 导航核心区域：基于胶囊位置定位 -->
  <view 
    class="navigation-header" 
    style="top: {{menuTop - 12}}rpx; height: {{menuHeight + 24}}rpx; padding-top: 12rpx; padding-bottom: 12rpx;"
  >
    <!-- 左侧返回按钮 -->
    <view 
      class="back-btn" 
      wx:if="{{showBackButton}}"
      bindtap="onBackClick"
      style="color: {{backButtonColor}};"
    >
      <text class="back-icon">{{backSymbol}}</text>
    </view>

    <!-- 居中标题 -->
    <view 
      class="header-title" 
      wx:if="{{title}}"
      style="color: {{titleColor}};"
    >
      {{title}}
    </view>

    <!-- 原有插槽 -->
    <slot></slot>
  </view>
</view>