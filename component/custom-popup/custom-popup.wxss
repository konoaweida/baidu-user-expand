.popup {
  margin-top: 45rpx;
  align-items: center;
}
.block {
  width: 100vw;
  height: 85vh;
  background: var(--td-bg-color-container);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
  border-bottom: 1px solid #eee;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 700;
  font-size: 35rpx;
  font-family: "PingFang SC", "苹方", sans-serif;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
  cursor: pointer;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #9386E2;
}
