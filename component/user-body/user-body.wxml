<!--component/user-body/user-body.wxml-->
<view class="user-body">
  <!-- 顶部按钮栏 -->
  <view class="top-tabs">
    <!-- 人脉排行榜按钮 -->
    <view class="tab" bindtap="onRankTap">人脉排行榜</view>
    <!-- 成就勋章按钮 -->
    <view class="tab" bindtap="onMedalTap">成就勋章</view>
  </view>

  <!-- 功能图标区 -->
  <view class="function-list">
    <view class="function-item">
      <image class="icon" src=""></image>
      <text class="text">礼品中心</text>
      <image class="add-btn" src=""></image>
    </view>
    <view class="function-item">
      <image class="icon v-icon red" src=""></image>
      <text class="text">订阅套餐</text>
      <image class="add-btn" src=""></image>
    </view>
    <view class="function-item">
      <image class="icon v-icon green" src=""></image>
      <text class="text">订阅套餐</text>
      <image class="add-btn" src=""></image>
    </view>
  </view>

  <!-- 优惠提示卡片 -->
  <view class="discount-card">
    <view class="card-header">
      <image class="sail-icon" src=""></image>
      <text class="title">摆渡</text>
    </view>
    <view class="info-box">
      <view class="desc">
        <text>首 1 个月享</text>
        <text class="discount">50%</text>
        <text>优惠</text>
      </view>
      <text class="countdown">优惠倒计时 00:29:03</text>
    </view>
    <view class="btns">
      <button class="upgrade" size="mini">升级</button>
      <text class="view-all">查看所有高级功能</text>
    </view>
  </view>
</view>
