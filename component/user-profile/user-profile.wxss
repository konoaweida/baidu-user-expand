/* 背景图容器 */
.user-background {
  width: 100%;
  height: 522rpx;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

/* 背景图片 */
.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 用户信息主容器 */
.user-layout {
  width: 100%;
  background: #fff;
  position: relative;
  z-index: 2;
  margin-top: -166rpx;
  border-radius: 100rpx 100rpx 0 0;
}

/* 用户信息区域 */
.user-info {
  height: 260rpx;
  border-top-left-radius: 100rpx;
  border-top-right-radius: 100rpx;
}

/* 用户头部区域 */
.user-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  /* padding: 52rpx 42rpx 0; */
  position: relative;
}

/* 人脉cp - 绝对定位在左侧 */
.user-cp {
  display: flex;
  position: absolute;
  width: 104rpx;
  height: 78rpx;
  left: 110rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  width: 104rpx;
  height: 78rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
}
.cp-text {
  width: 48rpx;
  height: 42rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40.54rpx;
}
/* 建立关系 - 绝对定位在右侧 */
.user-relationship {
  position: absolute;
  right: 42rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  height: 60rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 用户名称IP - 保持flex居中 */
.user-nameip { 
  text-align: center; 
  margin-top: 78rpx;
}  

/* 人脉cp/名称等简要样式 */
.user-name { 
  width: 136rpx;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgba(5, 2, 11, 1);
  vertical-align: top;
}
.user-ip { 
  width: 136rpx;
  height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  vertical-align: top;
}

/* 用户描述 */
.user-desc {
  padding: 10rpx 76rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #05020B;
  text-align: center;
  font-family: "Source Han Sans", "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* 头像样式 */
.user-avatar {
  position: absolute;
  top: -86rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 172rpx;
  height: 172rpx;
  overflow: hidden;
  border: 4rpx solid #fff;
  border-radius: 50%;
}
.avatar-image {
  width: 100%;
  height: 100%;
}


