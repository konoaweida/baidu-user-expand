/* component/tab-swiper/tab-swiper.wxss */
/* 标签滑动容器：原样式完全复制 */
.tab-swiper-container {
  width: 100%;
  height: auto;
  background: #FFFFFF;
}

/* 标签栏：原样式完全复制 */
.tab-bar {
  display: flex;
  height: 50rpx;
  background: #fff;
  padding: 0 264rpx;
}

/* 标签项：原样式完全复制 */
.tab-item {
  flex: 1;
  /* width: 96rpx; */
  padding: 0 7rpx;  
  text-align: center;
  font-size: 24rpx;
  font-weight: mediun;
  color: #BCB9C0;
  position: relative;
  transition: all 0.3s ease;
  font-family: "Source Han Sans", "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* 激活标签项：原样式完全复制 */
.tab-item.active {
  color: #05020B;
  font-size: 28rpx;
  /* transform: scale(1.1); */
}

/* 激活标签下划线：原样式完全复制 */
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #7A4FD6;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

/* 内容滚动区：原样式完全复制（从原页面迁移） */
.content-scroll {
  padding-bottom: calc(env(safe-area-inset-bottom) + 130rpx);
  min-height: 60vh; /* 最小高度，避免内容为空时塌陷 */
  height: auto; /* 自适应内容高度 */ 
  background: rgb(223, 239, 223);
  border-top: 1rpx solid #E8E8E8;

}