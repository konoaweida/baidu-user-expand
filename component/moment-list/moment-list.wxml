<view class="moment-list">
  <!-- 1. 用户信息区 -->
  <view class="moment-userinfo">
    <view class="userinfo-avatar">
      <image lazy-load class="avatar" src="{{moment.avatar || '/assets/image/微信图片_20250906204507_794_8.jpg'}}"></image>
    </view>
    <text class="userinfo-nickname">{{value.nickname || '未知用户'}}</text>
  </view>

  <!-- 2. 文字简介区 -->
  <text 
    class="moment-desc" 
    wx:if="{{showDesc}}"
  >{{moment.content || '文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍'}}</text>
                            
  <!-- 关键：新增共同父容器（定位参考） -->
  <view class="image-container" style="height: {{showImage ? '428rpx' : '96rpx'}}">
    <!-- 3. 图片区 -->
    <image 
      wx:if="{{showImage}}"
      class="moment-image" 
      src="{{moment.images[0] || '/assets/image/微信图片_20250906204507_794_8.jpg'}}" 
      mode="aspectFill" 
      lazy-load
    ></image>
    <!-- 4. .moment-actions 容器（现在参考父容器定位） -->
    <view class="moment-actions">
     <view class="item comment" bindtap="handleComment">
      <image src="../../assets/image/circles/图标-评论.png" mode="aspectFill" style="width: 100%; height: 100%"></image>
     </view>
     <view class="item like {{moment.isLiked ? 'liked' : 'unliked'}}" bindtap="handleLike">
      <image src="{{moment.isLiked ? '../../assets/image/circles/画板 1.png' : '../../assets/image/circles/图标-喜欢.png'}}" mode="aspectFill" style="width: 100%; height: 100%"></image>
     </view>
     <view class="item" bindtap="handleShare">
      <image src="../../assets/image/circles/图标-分享.svg" mode="aspectFill" style="width: 100%; height: 100%"></image>
     </view>
    </view>
  </view>
</view>