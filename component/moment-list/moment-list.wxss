/* 原有核心样式（保持不变） */
.moment-list-class {
  width: 718rpx;
  background-color: #F2F2F2;
  margin: 0 auto;
  padding: 25rpx 16rpx 20rpx;
  border-radius: 48rpx;
  box-sizing: border-box;
  overflow: hidden; /* 裁剪超出卡片的内容 */
  /* 移除父容器的 position:relative！避免干扰子容器定位 */
}

.moment-userinfo {
  display: flex;
  align-items: center;
  margin-left: 25rpx;
  margin-bottom: 10rpx;
  gap: 20rpx;
  width: 100%;
}

.userinfo-avatar {
  background-color: #e5e5e5;
  border-radius: 50%;
  height: 76rpx;
  overflow: hidden;
  width: 76rpx;
}

.userinfo-avatar .avatar {
  height: 100%;
  width: 100%;
}

.userinfo-nickname {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  font-weight: medium;
  color: #05020B;
  font-family: "Source Han Sans", "PingFang SC", "Microsoft YaHei", sans-serif;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.moment-desc {
  font-size: 28rpx;
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin-left: 25rpx;
  margin-bottom: 20rpx;
  width: 616rpx;
}

/* 关键：共同父容器（作为定位参考） */
.image-container {
  position: relative; /* 让 .moment-actions 以它为参考 */
  width: 100%; /* 与图片宽度一致 */
  height: 428rpx; /* 与图片高度完全一致（消除高度差） */
  border-radius: 48rpx; /* 与图片圆角一致，避免视觉错位 */
  overflow: hidden; /* 裁剪图片/按钮容器超出的部分 */
}

/* 图片区：填满父容器，无额外间距 */
.moment-image {
  width: 100%;
  height: 100%; /* 填满父容器高度（428rpx） */
  border-radius: 48rpx; /* 与父容器圆角一致 */
}

/* .moment-actions 容器：参考父容器定位，底部对齐图片 */
.moment-actions {
  position: absolute; /* 绝对定位 */
  bottom: 0; /* 容器底部 = 父容器底部 = 图片底部（核心对齐点） */
  left: 0;
  right: 0; /* 容器宽度 = 父容器宽度 = 图片宽度（消除宽度差） */
  height: 96rpx; /* 固定高度，不影响对齐 */
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  /* 可选：让容器底部圆角与图片呼应，视觉更连贯 */
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  /* 消除任何可能的间距误差 */
  margin: 0;
  padding: 0;
}

