/* pages/expand/expand.wxss */
.expand-container .navigation-header {
  background: #FEFEFE;
}
.tabs-container {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  display: flex;
  align-items: flex-end; /* 保持 Tab 项底部对齐 */
  justify-content: flex-start; /* 改为左对齐，避免 Tab 项被挤压 */
  /* 关键：左右 padding 改为 56rpx（左）和 32rpx（右，按钮离边界距离） */
  padding: 32rpx 32rpx 24rpx 56rpx; 
  /* border-bottom: 2rpx solid #f5f5f5; */
}

/* 2. 新增：筛选按钮样式（固定高度、靠右、视觉样式） */
.filter-btn {
  /* 与 Tab 项高度对齐（54rpx），垂直居中 */
  height: 40rpx;
  width: 40rpx;
  margin-top:14rpx;
  margin-left: auto; 
  background-color: #4a42d4; /* 按钮背景色，可按需修改 */

}

/* 以下原有样式保持不变（tab-item、激活态等） */
.tab-item {
  height: 54rpx;
  color: rgba(158, 158, 158, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(158, 158, 158, 1);
  text-align: left;
  vertical-align: top;
}
.tab-item.one { width: 74rpx; margin-right: 48rpx;}
.tab-item.two { width: 146rpx; }
.tab-item.active {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 52.12rpx;
  color: rgba(5, 2, 11, 1);
}
.tab-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translateX(-50%);
  width: 54rpx;
  height: 12rpx;
  border-radius: 4rpx;
  background: rgba(5, 2, 11, 1);
}
.tab-content {
  /* 原有属性保留 */
  width: 100%;
  box-sizing: border-box;
}

.content-recommend {
  width: 100%;
  height: 100%;  
  background: #F8F9FD;
}

.content-potential {
  padding-top: 32rpx; 
  width: 100%;
  height: auto;  
  background: #f0e3f3;
}