.expand-container .navigation-header {
  background: #FEFEFE;
}

.tabs-placeholder {
  height: 110rpx;
  width: 100%;
}

.tabs-container {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding: 32rpx 32rpx 24rpx 56rpx;
  background-color: #fff;
}

.filter-btn {
  height: 40rpx;
  width: 40rpx;
  margin-top: 14rpx;
  margin-left: auto;
  background-color: #4a42d4;
  border-radius: 8rpx;
}

.tab-item {
  height: 54rpx;
  color: rgba(158, 158, 158, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40.54rpx;
  text-align: left;
  vertical-align: top;
  transition: all 0.3s ease;
}

.tab-item.one { width: 74rpx; margin-right: 48rpx;}
.tab-item.two { width: 146rpx; }

.tab-item.active {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 52.12rpx;
  color: rgba(5, 2, 11, 1);
}

.tab-item::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translateX(-50%) scaleX(0);
  width: 54rpx;
  height: 12rpx;
  border-radius: 4rpx;
  background: rgba(5, 2, 11, 1);
  transition: all 0.3s ease;
  opacity: 0;
}

.tab-item.active::after {
  transform: translateX(-50%) scaleX(1);
  opacity: 1;
}

.tab-content {
  width: 100%;
  box-sizing: border-box;
}

/* 推荐页样式 */
.content-recommend {
  width: 100%;
  height: 100%;  
  background: #F8F9FD;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.search-container {
  width: 320rpx;
  height: 320rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: opacity 0.2s ease;
}

.search-container[catchtap="noop"] {
  opacity: 0.8;
}

.btn-gif {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
  padding: 0 20rpx;
}

/* 潜在人脉页样式 */
.content-potential {
  width: 100%;
  height: auto;  
}

.empty-state {
  padding-top: 80rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
  display: block;
}

.potential-list {
  box-sizing: border-box;
  display: flex;
  padding-bottom: 132rpx;  /* 【优化】为加载状态留出空间 */
  flex-wrap: wrap;
}

/* 【新增】分页加载状态样式 */
.load-more-state {
  width: 100%;
  padding: 40rpx 0;
  text-align: center;
  background: transparent;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.no-more-text {
  font-size: 28rpx;
  color: #ccc;
  display: block;
}

/* 潜在人脉列表项样式 */
.content-item {
  width: 750rpx;
  height: 98rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 0rpx 48rpx 0rpx 48rpx;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  transform: translateZ(0);
  will-change: transform;
}

.potential-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}

/* 头像样式 */
.item-avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 22rpx;
  margin-bottom: 6rpx;
  flex-shrink: 0;
  border: 2rpx solid #f0f0f0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

/* 信息区域 */
.item-info {
  flex: 1;
  display: flex;
  width: 436rpx;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.info-main {
  display: flex;
  align-items: center;
  /* margin-bottom: 8rpx; */
}

.item-name {
  width: auto;
  height: 42rpx;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
  margin: 8rpx 16rpx 6rpx 0;
}

.item-age {
  width: auto;
  height: 36rpx;
  /** 文本1 */
  margin: 10rpx 0;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}

.info-details {
  display: flex;
  width: 100%;
  height: 42rpx;
  align-items: bottom;
  gap: 15rpx;
  /* 新增整体省略样式 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-details > text{
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(158, 158, 158, 1);
  text-align: left;
  vertical-align: top;
}

.connection-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  flex: 1;
  min-width: 0; /* 重要：让flex项可以收缩 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 组CP按钮 */
.cp-button {
  width: 88rpx;
  height: 48rpx;
  border-radius: 8rpx;
  background: rgba(122, 79, 214, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 6rpx 0;
  margin-left: 16rpx;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.cp-button:not(.disabled):active {
  transform: scale(0.95);
  opacity: 0.8;
}

.cp-button.disabled {
  background: #ccc !important;
  opacity: 0.6;
}

.cp-button-text {
  width: 100%;
  height: 36rpx;
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  vertical-align: top;
}

/* 加载失败状态 */
.load-error-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
}

.error-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.retry-button {
  width: 200rpx;
  height: 72rpx;
  background: #4a42d4;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.retry-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

/* 顶部推荐人卡片样式 */
.top-cards-container {
  width: 100%;
  height: 332rpx;
  background-color: transparent;
  padding: 32rpx 20rpx 22rpx;
  box-sizing: border-box;
}

.cards-scroll {
  display: flex;
  width: 100%;
  height: 100%;
  scroll-behavior: smooth;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.cards-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.card-item {
  width: 222rpx;
  height: 100%;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  margin-right: 23rpx;
  border: 2rpx solid rgba(230, 230, 230, 1);
  border-radius: 16rpx;
}

.card-avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  margin: 59rpx auto 0;
  display: block;
  border: 2rpx solid #f0f0f0;
}

.card-name {
  display: block;
  width: auto;
  height: 37.69rpx;
  font-size: 24rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: center;
  vertical-align: top;
  margin-bottom: 6rpx;
}

.card-summary {
  display: block;
  margin-left: 44rpx;
  width: 148.74rpx;
  height: 37.69rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(158, 158, 158, 1);
  text-align: left;
  vertical-align: top;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-close {
  position: absolute;
  top: 13rpx;
  right: 13rpx;
  width: 31.08rpx;
  height: 29.31rpx;
  line-height: 28rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 24rpx;
  color: #666666;
  cursor: pointer;
}