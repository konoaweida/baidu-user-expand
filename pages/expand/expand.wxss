/* -------------------------- 新增：推荐页正方形按钮与三态样式 -------------------------- */
/* 1. 初始态：正方形按钮 */
.search-btn {
  width: 320rpx; /* 正方形宽度 */
  height: 320rpx; /* 正方形高度 */
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.search-btn:hover {
  transform: scale(1.02);
}

/* 按钮动图 */
.btn-gif {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}

/* 按钮文案 */
.btn-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
  padding: 0 20rpx;
}

/* 2. 加载中状态 */
.search-loading {
  width: 320rpx;
  height: 320rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 24rpx;
}

/* 3. 重试按钮 */
.retry-btn {
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0;
  background: #4a42d4;
  color: #fff;
  font-size: 24rpx;
  border-radius: 32rpx;
}