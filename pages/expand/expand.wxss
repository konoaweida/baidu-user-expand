.expand-container .navigation-header {
  background: #FEFEFE;
}

.tabs-placeholder {
  height: 110rpx;
  width: 100%;
}

.tabs-container {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding: 32rpx 32rpx 24rpx 56rpx;
}

.filter-btn {
  height: 40rpx;
  width: 40rpx;
  margin-top: 14rpx;
  margin-left: auto;
  background-color: #4a42d4;
}

.tab-item {
  height: 54rpx;
  color: rgba(158, 158, 158, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40.54rpx;
  text-align: left;
  vertical-align: top;
  transition: all 0.3s ease;
}

.tab-item.one { width: 74rpx; margin-right: 48rpx;}
.tab-item.two { width: 146rpx; }

.tab-item.active {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 52.12rpx;
  color: rgba(5, 2, 11, 1);
}

.tab-item::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translateX(-50%) scaleX(0);
  width: 54rpx;
  height: 12rpx;
  border-radius: 4rpx;
  background: rgba(5, 2, 11, 1);
  transition: all 0.3s ease;
  opacity: 0;
}

.tab-item.active::after {
  transform: translateX(-50%) scaleX(1);
  opacity: 1;
}

.tab-content {
  width: 100%;
  box-sizing: border-box;
}

/* 推荐页：仅保留容器样式（删除原 .empty-state 相关样式） */
.content-recommend {
  width: 100%;
  height: 100%;  
  background: #F8F9FD;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.search-container {
  width: 320rpx;
  height: 320rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: opacity 0.2s ease;
}

/* 加载中视觉提示（降低透明度） */
.search-container[catchtap="noop"] {
  opacity: 0.8;
}

.btn-gif {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
  padding: 0 20rpx;
}

/* 潜在人脉页：保留原样式 */
.content-potential {
  width: 100%;
  height: auto;  
}

.empty-state {
  padding-top: 80rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
  display: block;
}

.content-item {
  height: 100rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
  /* 新增：开启硬件加速，减少滚动重绘消耗 */
  transform: translateZ(0);
  will-change: transform;
}
/* 顶部推荐人卡片样式（独立类名，不影响原有样式） */
.top-cards-container {
  width: 100%;
  height: 332rpx;
  padding: 32rpx 9rpx;
  box-sizing: border-box;
}

.cards-scroll {
  display: flex;
  width: 100%;
  height: 100%;
}

.card-item {
  width: 222rpx;
  height: 100%;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  flex-shrink: 0; /* 防止卡片被压缩 */
  margin: 0 11rpx;
  border: 2rpx solid rgba(230, 230, 230, 1);
  border-radius: 16rpx;
}

.card-avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  margin: 59rpx auto 0;
  display: block;
}

.card-name {
  display: block;
  width: 79.92rpx;
  height: 37.69rpx;
  margin: auto;
  font-size: 24rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
  margin-bottom: 6rpx;
}

.card-summary {
  display: block;
  margin-left: 44rpx;
  width: 148.74rpx;
  height: 37.69rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(158, 158, 158, 1);
  text-align: left;
  vertical-align: top;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-close {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  font-size: 24rpx;
  color: #333;
  cursor: pointer;
}

/* 原有列表容器（仅调整间距，不修改item样式） */
.potential-list {
  padding: 0 16rpx;
  box-sizing: border-box;
}