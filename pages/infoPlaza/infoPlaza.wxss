/* pages/infoPlaza/infoPlaza.wxss */
.nav-header .navigation-header {
  background: #FFFFFF;
}

.search-row {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  margin-left: 26rpx;
}

/* 搜索框默认样式 */
.search-box {
  display: flex;
  width: 442rpx;
  height: 64rpx;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 28rpx;
  height: 64rpx; /* 默认高度 */
}

/* 搜索框聚焦时样式：高度变化 */
.search-box-focus {
  width: 398rpx;
  height: 80rpx;
}

/* 搜索图标 */
.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.search-box-focus .search-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 输入框 */
.search-input {
  flex: 1;
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: rgba(0, 0, 0, 0.9);
  vertical-align: top;
}

/* 占位符样式 */
.search-placeholder {
  font-size: 30rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 30rpx;
  color: rgba(122, 120, 120, 1);
  text-align: left;
  vertical-align: top;
}

/* 清除图标 */
.clear-icon {
  width: 42rpx;
  height: 42rpx;
  margin-left: 20rpx;
}

/* 取消按钮 */
.cancel-btn {
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: rgba(122, 79, 214, 1);
  vertical-align: middle;
  margin-left: 32rpx;
}

.tabs-placeholder {
  height: 110rpx;
  width: 100%;
}

/* 标签栏样式 */
.tabs-container {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding: 32rpx 32rpx 24rpx 56rpx;
  background-color: #fff;
}

.tab-item {
  height: 54rpx;
  color: rgba(158, 158, 158, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40.54rpx;
  text-align: left;
  vertical-align: top;
  transition: all 0.3s ease;
}

.tab-item{ width: 74rpx; margin-right: 48rpx;}

.tab-item.active {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 52.12rpx;
  color: rgba(5, 2, 11, 1);
}

.tab-item::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translateX(-50%) scaleX(0);
  width: 54rpx;
  height: 12rpx;
  border-radius: 4rpx;
  background: rgba(5, 2, 11, 1);
  transition: all 0.3s ease;
  opacity: 0;
}

.tab-item.active::after {
  transform: translateX(-50%) scaleX(1);
  opacity: 1;
}

/* 动态列表样式 */
.dynamic-list {
  width: 100%;
  box-sizing: border-box;
  background-color: #F3F3F3;
}

.dynamic-item-list {
  padding-bottom: calc(132rpx + env(safe-area-inset-bottom));
}

/* 单个骨架屏项 */
.skeleton-item {
  width: 718rpx;
  background-color: #FFFFFF;
  margin: 32rpx auto 0;
  padding: 24rpx 16rpx 18rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

/* 用户信息区 */
.skeleton-userinfo {
  display: flex;
  align-items: center;
  margin-left: 36rpx;
  margin-bottom: 4rpx;
  gap: 20rpx;
  width: 100%;
  height: 76rpx;
}

/* 头像骨架（添加动画） */
.skeleton-avatar {
  background-color: #e5e5e5;
  border-radius: 50%;
  height: 76rpx;
  width: 76rpx;
  animation: skeleton-loading 1.5s infinite; /* 绑定动画 */
}

/* 昵称骨架（添加动画） */
.skeleton-nickname {
  height: 48rpx;
  width: 20%;
  background-color: #e5e5e5;
  animation: skeleton-loading 1.5s infinite; /* 绑定动画 */
  animation-delay: 0.3s; /* 延迟动画，让多个元素错开动效 */
}

/* 文字内容骨架（添加动画） */
.skeleton-desc {
  width: 616rpx;
  height: 42rpx;  
  margin-left: 34rpx;
  margin-bottom: 14rpx;
  background-color: #e5e5e5;
  animation: skeleton-loading 1.5s infinite; /* 绑定动画 */
  animation-delay: 0.3s; /* 延迟动画，增强层次感 */
}

/* 图片骨架（添加动画） */
.skeleton-content {
  position: relative; 
  width: 100%; 
  height: 428rpx; 
  border-radius: 16rpx; 
  background-color: #e5e5e5;
  animation: skeleton-loading 1.5s infinite; /* 绑定动画 */
  animation-delay: 0.3s; /* 延迟动画 */
}

/* 加载动画定义（呼吸效果） */
@keyframes skeleton-loading {
  0% { opacity: 0.5; } /* 初始透明度 */
  50% { opacity: 0.8; } /* 中间透明度（变亮） */
  100% { opacity: 0.5; } /* 结束透明度（变暗） */
}

/* 加载更多样式 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 引导按钮样式 */
.guide-btn {
  margin-top: 20rpx;
  width: 240rpx;
  height: 72rpx;
  background: #fff;
  color: #7a4fd6;
  border: 2rpx solid #7a4fd6;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.guide-btn::after {
  border: none;
}

/* 空态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(158, 158, 158, 1);
  line-height: 40rpx;
}

.refresh-btn {
  margin-top: 40rpx;
  width: 200rpx;
  height: 72rpx;
  background: rgba(122, 79, 214, 1);
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.refresh-btn::after {
  border: none;
}