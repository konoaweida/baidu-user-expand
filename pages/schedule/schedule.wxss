/* pages/schedule/schedule.wxss */
.nav-header .navigation-header {
  background: #FFFFFF;
}

.search-row {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  margin-left: 26rpx;
}

/* 搜索框默认样式 */
.search-box {
  display: flex;
  width: 442rpx;
  height: 64rpx;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 28rpx;
  height: 64rpx; /* 默认高度 */
}

/* 搜索框聚焦时样式：高度变化 */
.search-box-focus {
  width: 398rpx;
  height: 80rpx;
}

/* 搜索图标 */
.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.search-box-focus .search-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 输入框 */
.search-input {
  flex: 1;
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: rgba(0, 0, 0, 0.9);
  vertical-align: top;
}

/* 占位符样式 */
.search-placeholder {
  font-size: 30rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 30rpx;
  color: rgba(122, 120, 120, 1);
  text-align: left;
  vertical-align: top;
}

/* 清除图标 */
.clear-icon {
  width: 42rpx;
  height: 42rpx;
  margin-left: 20rpx;
}

/* 取消按钮 */
.cancel-btn {
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: rgba(122, 79, 214, 1);
  vertical-align: middle;
  margin-left: 32rpx;
}

.pending-relationship {
  width: 100%;
  height: 156rpx;
  display: flex;
  padding: 26rpx 66rpx;
  align-items: center;
}

.left-icon {
  width: 108rpx;
  height: 108rpx;
  margin-right: 30rpx;
  position: relative;
}

.mini-icon {
  /* 去掉固定宽度，改为最小宽度+自适应 */
  min-width: 32rpx; 
  height: 32rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 100%; /* 固定在右上角，数字多了自动向右拓展 */
  transform: translate(-50%);
  background: rgba(251, 38, 64, 1);
  /* Flex布局实现文字居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx; /* 左右加内边距，让数字多时有空间 */
}

.mini-icon text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(255, 255, 255, 1);
  /* 去掉text-align和vertical-align，由flex布局控制 */
}

.right-text {
  font-size: 32rpx;
  font-weight: 500;
}

.right-text{
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}

/* 分组整体布局 */
.group-item {
  display: flex;
  align-items: center;
  margin: 0 32rpx;
  padding: 48rpx 34rpx 15rpx;
  border-bottom: 2rpx solid rgba(230, 230, 230, 1);
}

/* 分组图标容器 */
.group-icon {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background-color: #e6f7e9; /* 浅绿色背景 */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 48rpx;
}

/* 分组信息区域（名称+成员） */
.group-info {
  flex: 1;
}

/* 分组名称 */
.group-name {
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
  margin-bottom: 22rpx;
}

/* 成员头像区域 */
.group-members {
  display: flex;
  align-items: center;
}

/* 成员头像样式（重叠效果） */
.member-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx; /* 负margin实现重叠 */
}

/* 成员人数 */
.member-count {
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  text-align: left;
  vertical-align: top;
  margin-left: 24rpx;
}

.group-more {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx; /* 可根据需求调整宽度，确保文字居中 */
  height: 80rpx; /* 与宽度一致，保证视觉平衡 */
}

.group-more text {
  font-size: 40rpx;
  color: #BCB9C0;
  height: 80rpx; 
}

/* 弹出层遮罩 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.popup-mask.show {
  opacity: 100;
  pointer-events: auto;
}

/* 弹出层样式 */
.popup {
  position: fixed;
  width: 100%;
  height: 828rpx;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 48rpx 48rpx 0rpx 0rpx;
  background: rgba(255, 255, 255, 1);
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.popup.show {
  transform: translateY(0);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.popup-header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.header-top {
  position: absolute;
  top: 34rpx;
  left: 50%;
  transform: translate(-50%, 0);
  width: 66rpx;
  height: 10rpx;
  opacity: 1;
  border-radius: 320rpx;
  background: rgba(204, 204, 204, 1);
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  margin-top: 48rpx;
  margin-right: 32rpx;
}

.popup-content {
  padding: 0 37rpx;
  max-height: 500rpx;
  overflow-y: auto;
}

/* 完成按钮样式 */
.confirm-btn {
  position: absolute;
  width: 686rpx;
  height: 88rpx;
  bottom: env(safe-area-inset-bottom);
  left: 50%;
  transform: translate(-50%, 0);
  padding: 0 32rpx;
  border-radius: 16rpx;
  background: rgba(122, 79, 214, 1);
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: rgba(248, 244, 253, 1);
}

.popup-footer {
  padding: 20rpx 30rpx 30rpx;
}

.popup-footer .confirm-btn {
  padding: 0;
}

/* 圈子好友弹出层 */
.friend-popup-container {
  position: fixed; /* 新增：改为fixed定位，实现全屏覆盖 */
  top: 0;
  left: 0;
  z-index: 9999; /* 新增：确保弹出层覆盖其他内容 */
  height: 100vh;
  width: 100vw;
  background-color: #fff; /* 保留原背景色，避免透明 */
}

.nav-popup-header .back-btn {
  margin-left: 20rpx;
}

.nav-item {
  width: 100%;
  height: 88rpx;
  margin-left: 123rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.nav-icon {
  width: 61.63rpx;
  height: 61.63rpx;
  margin-right: 13rpx;
  display: block; 
}

.nav-number {
  width: auto;
  height: 61.63rpx;
  line-height: 61.63rpx;
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}

.friend-popup-content {
  padding-top: 35rpx;
}

.friend-item {
  width: 100%;
  height: 132rpx;
  padding: 24rpx 32rpx ;
  display: flex;
  justify-content: space-between;
}

.friend-avatar {
  width: 84rpx;
  height: 84rpx;
  margin-right: 24rpx;
  position: relative;
}

.friend-info {
  width: 486rpx;
  height: 100%;
  margin-right: 32rpx;
}

.friend-name {
  width: auto;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgb(11, 2, 5);
  text-align: left;
  vertical-align: top;  
}

.friend-esc {
  width: 100%;
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(158, 158, 158, 1);
  text-align: left;
  vertical-align: top;
  white-space: nowrap; /* 文本不换行 */
  overflow: hidden; /* 隐藏超出容器的内容 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}

.info-time {
  width: 60rpx;
  height: 100%;
  padding-top: 44rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  text-align: left;
  vertical-align: top;
}