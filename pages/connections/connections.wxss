/* pages/connections/connections.wxss */
/* 背景图容器 */
.user-background {
  width: 100%;
  height: 522rpx;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

/* 背景图片 */
.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 用户信息主容器 */
.user-layout {
  width: 100%;
  background: #fff;
  position: relative;
  z-index: 2;
  margin-top: -166rpx;
  border-radius: 100rpx 100rpx 0 0;
}

/* 用户信息区域 */
.user-info {
  height: 250rpx;
  border-top-left-radius: 100rpx;
  border-top-right-radius: 100rpx;
}

/* 用户头部区域 */
.user-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
  /* padding: 52rpx 42rpx 0; */
  position: relative;
}

/* 人脉cp - 绝对定位在左侧 */
.user-cp {
  display: flex;
  position: absolute;
  width: 104rpx;
  height: 78rpx;
  left: 110rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  width: 104rpx;
  height: 78rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
}
.cp-text {
  width: 100%;
  height: 42rpx;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(5, 2, 11, 1);
  text-align: center;
  vertical-align: top;
}
/* 建立关系 - 绝对定位在右侧 */
.user-relationship {
  position: absolute;
  right: 42rpx; /* 与容器padding一致 */
  top: 45rpx;
  width: 176rpx;
  height: 58rpx;
  white-space: nowrap;
  flex-shrink: 0;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 214rpx;
  background: rgba(242, 242, 242, 1);
}

/* 用户名称IP - 保持flex居中 */
.user-nameip { 
  text-align: center; 
  margin-top: 94rpx;
}  

/* 人脉cp/名称等简要样式 */
.user-name { 
  width: 136rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgba(5, 2, 11, 1);
  vertical-align: top;
}
.user-ip { 
  width: 136rpx;
  height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  vertical-align: top;
}

/* 用户描述 */
.user-desc {
  height: 70rpx;
  margin-top: 8rpx;
  padding: 0 76rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: center;
  vertical-align: center;
}

/* 头像样式 */
.user-avatar {
  position: absolute;
  top: -86rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 172rpx;
  height: 172rpx;
  border: 8rpx solid #fff;
  border-radius: 50%;
}
.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
/* 新增性别图标容器 */
.gender-container {
  position: absolute;
  bottom: -4%;
  right: -10%;
  width: 42rpx;
  height: 42rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.gender-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}


.tab-swiper-container {
  width: 100%;
  height: auto;
  background: #FFFFFF;
}

/* 标签栏：原样式完全复制 */
.tab-bar {
  display: flex;
  height: 50rpx;
  background: #fff;
  padding: 0 264rpx;
}

/* 标签项：原样式完全复制 */
.tab-item {
  flex: 1;
  /* width: 96rpx; */
  padding: 0 7rpx;  
  text-align: center;
  font-size: 24rpx;
  font-weight: mediun;
  color: #BCB9C0;
  position: relative;
  transition: all 0.3s ease;
  font-family: "Source Han Sans", "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* 激活标签项：原样式完全复制 */
.tab-item.active {
  color: #05020B;
  font-size: 28rpx;
  /* transform: scale(1.1); */
}

/* 激活标签下划线：原样式完全复制 */
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #7A4FD6;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

/* 内容滚动区：原样式完全复制（从原页面迁移） */
.content-scroll {
  padding-bottom: calc(env(safe-area-inset-bottom) + 130rpx);
  min-height: 60vh; /* 最小高度，避免内容为空时塌陷 */
  height: auto; /* 自适应内容高度 */ 
  background: rgb(223, 239, 223);
  border-top: 1rpx solid #E8E8E8;

}


