/* pages/filter/filter.wxss */
.filter-container {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 80rpx;
  padding: 0 48rpx;
}

/* 筛选项样式 */
.filter-zodiac {
  display: flex;
  width: 100%;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
  border-bottom: 2rpx solid rgba(230, 230, 230, 1);
}

.item-label {
  width: 128rpx;
  height: 48rpx;
  margin-right: 394rpx;
  display: flex; /* 横向排列子元素 */
  align-items: center; /* 垂直居中对齐 */
}

.filter-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  overflow: hidden;
}


.filter-text, 
.item-value {
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}

.zodiac {
  width: 84rpx;
}

.arrow-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 5rpx;
}

.filter-gender {
  width: 100%;
  height: 138rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 64rpx;
  margin-bottom: 64rpx;
}

/* 性别 */
.gender-radio-group {
  display: flex;
  align-items: center;
  width: auto; 
  gap: 64rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  height: 42rpx;
  cursor: pointer;
  flex-shrink: 0; 
}

.radio-circle {
  width: 28rpx;
  height: 28rpx;
  opacity: 1;
  background: rgba(255, 255, 255, 1);
  border: 0.93rpx solid rgba(123, 133, 148, 1);
  border-radius: 50%;
  margin-right: 12rpx;
  box-sizing: border-box;
}

.radio-circle.checked {
  background: rgba(255, 255, 255, 1);
  border: 1.75rpx solid rgba(122, 79, 214, 1);
  position: relative;
}

.radio-circle.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 21rpx;
  height: 21rpx;
  border-radius: 50%;
  background-color: #7C4DFF;
}

.radio-text {
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 0rpx;
  color: rgba(188, 185, 192, 1);
  text-align: left;
}

.radio-text.checked-text {
  color: rgba(5, 2, 11, 1);
}
/* 单选框样式 */

/* 收入 */
.filter-income,
.filter-age {
  width: 100%;
  height: 216rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
  /* align-items: center; */
  box-sizing: border-box;
  margin-bottom: 64rpx;
}

.filter-income .filter-income-text {
  font-size: 28rpx;
}
/* 滑块样式 */
.item-slider {
  width: 540rpx; /* 适配右侧宽度 */
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999;
}

/* 完成按钮样式 */
.confirm-btn {
  position: absolute;
  width: 686rpx;
  height: 88rpx;
  bottom: env(safe-area-inset-bottom);
  left: 50%;
  transform: translate(-50%, 0);
  padding: 0 32rpx;
  border-radius: 16rpx;
  background: rgba(122, 79, 214, 1);
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: rgba(248, 244, 253, 1);
}

.confirm-text {
  font-size: 36rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 36rpx;
  color: rgba(248, 244, 253, 1);
  text-align: center;
}
/* 弹出层遮罩 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.popup-mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* 星座弹出层样式 */
.popup {
  position: fixed;
  width: 100%;
  height: 576rpx;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 48rpx 48rpx 0rpx 0rpx;
  background: rgba(255, 255, 255, 1);
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.popup.show {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-top {
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translate(-50%, 0);
  width: 66rpx;
  height: 10rpx;
  opacity: 1;
  border-radius: 320rpx;
  background: rgba(204, 204, 204, 1);
}

.popup-header text {
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 0rpx;
  color: rgba(48, 31, 94, 1);
  text-align: left;
  vertical-align: top;
  margin-left: 344rpx;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  margin: 32rpx;
}

.popup-content {
  padding: 0 37rpx;
  max-height: 500rpx;
  overflow-y: auto;
}

.constellation-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 28rpx;
}

.constellation-btn {
  /* flex: 0 0 calc(25% - 16rpx); 3列布局 */
  width: 148rpx;
  height: 50rpx;
  border-radius: 586rpx;
  border: 2rpx solid rgba(188, 185, 192, 1);
  text-align: center;
  font-size: 30rpx;
  background-color: #fff;
  color: rgba(188, 185, 192, 1);
}

.constellation-btn.active {
  border: 2rpx solid rgba(48, 31, 94, 1);
  color: rgba(48, 31, 94, 1);  
  /* background-color: rgba(124, 77, 255, 0.1); */
}

.popup-footer {
  padding: 20rpx 30rpx 30rpx;
}

.popup-footer .confirm-btn {
  padding: 0;
}


.demo-desc {
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.wrapper {
  background: var(--bg-color-demo);
  padding: 40rpx 12rpx 0;
}

