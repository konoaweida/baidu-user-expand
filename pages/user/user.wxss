/* pages/user/user.wxss */
/* 背景图容器 */
.user-background {
  width: 100%;
  height: 522rpx;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

/* 背景图片 */
.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 用户信息主容器 */
.user-layout {
  width: 100%;
  background: #fff;
  position: relative;
  z-index: 2;
  margin-top: -166rpx;
  border-radius: 100rpx 100rpx 0 0;
}

/* 用户信息区域 */
.user-info {
  height: 260rpx;
  border-top-left-radius: 100rpx;
  border-top-right-radius: 100rpx;
}

/* 用户头部区域 */
.user-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  /* padding: 52rpx 42rpx 0; */
  position: relative;
}

/* 人脉cp - 绝对定位在左侧 */
.user-cp {
  display: flex;
  position: absolute;
  width: 104rpx;
  height: 78rpx;
  left: 110rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  width: 104rpx;
  height: 78rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
}
.cp-text {
  width: 48rpx;
  height: 42rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40.54rpx;
}
/* 建立关系 - 绝对定位在右侧 */
.user-relationship {
  position: absolute;
  right: 42rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  height: 60rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 用户名称IP - 保持flex居中 */
.user-nameip { 
  text-align: center; 
  margin-top: 78rpx;
}  

/* 人脉cp/名称等简要样式 */
.user-name { 
  width: 136rpx;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgba(5, 2, 11, 1);
  vertical-align: top;
}
.user-ip { 
  width: 136rpx;
  height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  vertical-align: top;
}

/* 用户描述 */
.user-desc {
  padding: 10rpx 76rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #05020B;
  text-align: center;
  font-family: "Source Han Sans", "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* 头像样式 */
.user-avatar {
  position: absolute;
  top: -86rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 172rpx;
  height: 172rpx;
  overflow: hidden;
  border: 4rpx solid #fff;
  border-radius: 50%;
}
.avatar-image {
  width: 100%;
  height: 100%;
}

.user-body {
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 130rpx);
}
/* 顶部按钮栏 */
.top-tabs {
  display: flex;
  justify-content: center;
  gap: 48rpx; /* 按钮间距 */
  padding: 20rpx 0 48rpx 0; /* 上下外边距 */
}

.tab {
  height: 64rpx;
  width: 208rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  font-weight: mediun;  
  font-family: "Source Han Sans", "PingFang SC", "Microsoft YaHei", sans-serif;
  background-color: #F2F2F2; /* 按钮默认背景 */
  border-radius: 214rpx; /* 圆角，增强“按钮感” */
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
  transition: background-color 0.2s; /* 背景色过渡动画 */
}

/* 按钮按下时的反馈（模拟“按下”效果） */
.tab:active {
  background-color: #e5e5e5;
}

/* 功能图标区 */
.function-list {
  display: flex;
  justify-content: center;
  gap: 42rpx;
  margin-bottom: 24rpx;
}
.function-item {
  display: flex;
  height: 200rpx;
  width: 206rpx;
  border-radius: 24rpx;
  background: #F8F8F8;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.text {
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.add-btn {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: -24rpx;
  right: -24rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.2);
}

/* 优惠提示卡片 */
.discount-card {
  width: 100%;
  height: 374rpx;
  background-color: #FEF5F5;
  border-radius: 30rpx;
  padding: 20rpx 32rpx; /* 保留容器自身边距不动 */
  /* 关键：启用 Flex 垂直布局 */
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
}

.info-box {
  flex: 1; /* 占据剩余空间（上下容器之外的区域） */
  /* 可选：如果中间内容需要垂直居中，可添加 */
  /* display: flex;
  flex-direction: column;
  justify-content: center; */
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
}
.sail-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}
.title {
  font-size: 40rpx;
  font-weight: mediun;
}
.desc {
  font-size: 40rpx;
  font-weight: mediun;
  margin-bottom: 20rpx;
  line-height: 44rpx;
}
.discount {
  font-size: 40rpx;
  color: #E65A5A;
  font-weight: bold;

}
.countdown {
  font-size: 24rpx;
  font-weight: mediun;
  margin-bottom: 30rpx;
  display: block;
}
.btns {
  display: flex;
  width: 370rpx;
  height: 74rpx;
  align-items: center;
}
.upgrade {
  background: linear-gradient(0deg, #ff5c8d, #ff8ab4);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: mediun;
  margin: 0;
  margin-right: 24rpx;
  padding: 0;
  border-radius: 560rpx;
}
.view-all {
  font-size: 24rpx;
  font-weight: mediun;
}

