/* pages/user/user.wxss */
/* 背景图容器 */
.user-background {
  width: 100%;
  height: 522rpx;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

/* 背景图片 */
.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 用户信息主容器 */
.user-layout {
  width: 100%;
  background: #fff;
  position: relative;
  z-index: 2;
  margin-top: -166rpx;
  border-radius: 100rpx 100rpx 0 0;
}
/* 设置按钮 */
.user-setting {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: -54rpx;
  right: 72rpx;
  transform: translateY(-100%);
  background: rgba(184, 184, 184, 0.45);
}
.setting-image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
/* 用户信息区域 */
.user-info {
  height: 250rpx;
  border-top-left-radius: 100rpx;
  border-top-right-radius: 100rpx;
}

/* 用户头部区域 */
.user-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
  /* padding: 52rpx 42rpx 0; */
  position: relative;
}

/* 人脉cp - 绝对定位在左侧 */
.user-cp {
  display: flex;
  position: absolute;
  width: 104rpx;
  height: 78rpx;
  left: 110rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  width: 104rpx;
  height: 78rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
}
.cp-text {
  width: 100%;
  height: 42rpx;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(5, 2, 11, 1);
  text-align: center;
  vertical-align: top;
}
/* 编辑资料 - 绝对定位在右侧 */
.edit-btn {
  position: absolute;
  right: 74rpx; /* 与容器padding一致 */
  top: 50%;
  transform: translateY(-50%);
  width: 96rpx;
  height: 76rpx;
  white-space: nowrap;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.edit-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 8rpx;
}
.edit-text {
  width: 96rpx;
  height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 36rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
}
/* 用户名称IP - 保持flex居中 */
.user-nameip { 
  text-align: center; 
  margin-top: 94rpx;
}  

/* 人脉cp/名称等简要样式 */
.user-name { 
  width: 136rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 46.34rpx;
  color: rgba(5, 2, 11, 1);
  vertical-align: top;
}
.user-ip { 
  width: 136rpx;
  height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(188, 185, 192, 1);
  vertical-align: top;
}

/* 用户描述 */
.user-desc {
  height: 70rpx;
  margin-top: 8rpx;
  padding: 0 76rpx;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: center;
  vertical-align: center;
}

/* 头像样式 */
.user-avatar {
  position: absolute;
  top: -86rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 172rpx;
  height: 172rpx;
  border: 8rpx solid #fff;
  border-radius: 50%;
}
.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
/* 新增性别图标容器 */
.gender-container {
  position: absolute;
  bottom: -4%;
  right: -10%;
  width: 42rpx;
  height: 42rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.gender-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-body {
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 130rpx);
}
/* 顶部按钮栏 */
.top-tabs {
  display: flex;
  justify-content: center;
  gap: 48rpx; /* 按钮间距 */
  padding: 22rpx 0 48rpx 0; /* 上下外边距 */
}

.tab {
  width: 208rpx;
  height: 74rpx;
  padding: 16rpx 34rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 214rpx; /* 圆角，增强“按钮感” */
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
  transition: background-color 0.2s; /* 背景色过渡动画 */
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(5, 2, 11, 1);
  text-align: center;
  vertical-align: top;
}

/* 按钮按下时的反馈（模拟“按下”效果） */
.tab:active {
  background-color: #e5e5e5;
}

/* 功能图标区 */
.function-list {
  display: flex;
  justify-content: center;
  gap: 44rpx;
  margin-bottom: 24rpx;
}
.function-item {
  display: flex;
  height: 200rpx;
  width: 206rpx;
  border-radius: 24rpx;
  background: rgba(242, 242, 242, 0.5);
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 26rpx;
}

.text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}
.add-btn {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: -24rpx;
  right: -24rpx;
  border-radius: 50%;
  background-color: #fff;
}

/* 优惠提示卡片 */
.discount-card {
  width: 100%;
  height: 374rpx;
  background-color: #FEF5F5;
  border-radius: 30rpx;
  padding: 20rpx 32rpx; /* 保留容器自身边距不动 */
  /* 关键：启用 Flex 垂直布局 */
  display: flex;
  flex-direction: column; /* 子元素垂直排列 */
}

.info-box {
  flex: 1; /* 占据剩余空间（上下容器之外的区域） */
  /* 可选：如果中间内容需要垂直居中，可添加 */
  /* display: flex;
  flex-direction: column;
  justify-content: center; */
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
}
.sail-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}
.title {
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 57.92rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}
.desc {
  font-size: 40rpx;
  font-weight: mediun;
  margin-bottom: 20rpx;
  line-height: 44rpx;
}
.discount {
  font-size: 40rpx;
  color: #E65A5A;
  font-weight: bold;

}
.countdown {
  font-size: 24rpx;
  font-weight: mediun;
  margin-bottom: 30rpx;
  display: block;
}
.btns {
  display: flex;
  width: 370rpx;
  height: 74rpx;
  align-items: center;
}
.upgrade {
  width: 152rpx;
  height: 74rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 16rpx 48rpx;
  margin: 0;
  margin-right: 24rpx;
  border-radius: 560rpx;
  font-size: 28rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  vertical-align: top;
  background: linear-gradient(180deg, rgba(242, 114, 204, 1) 0%, rgba(230, 69, 69, 1) 100%), linear-gradient(144.47deg, rgba(245, 172, 88, 1) 0%, rgba(235, 125, 82, 1) 100%);
}
.view-all {
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 34.76rpx;
  color: rgba(5, 2, 11, 1);
  text-align: left;
  vertical-align: top;
}

